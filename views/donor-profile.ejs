<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | Food Waste Management</title>
    <link rel="stylesheet" href="styles/donor-profile.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="profile">
                <label for="fileInput">
                    <img src="images/donor-deafult-pic.jpg" alt="User Profile" id="profileImage" class="circle">
                </label>
                <input type="file" id="fileInput" style="display: none;">
                <h2><%= data.name %></h2>
                <p><%= data.email %></p>
                <p><%= data.role %></p>
            </div>
            <nav>
                <ul>
                    <li class="active"><i class="fas fa-user"></i> Profile</li>
                    <li><i class="fas fa-sign-out-alt"></i> Logout</li>
                </ul>
            </nav>
        </aside>
        
        <main class="content">
            <div class="header">
                <h1>Welcome, <%= data.name %></h1>
                <p id="datetime"></p>
            </div>
            
            <h1>Profile Information</h1>
            <div class="profile-grid">
                <div class="column">
                    <div class="field">
                        <h3>Full Name</h3>
                        <p><%= data.name %></p>
                    </div>
                    <div class="field">
                        <h3>Email</h3>
                        <p><%= data.email %></p>
                    </div>
                    <div class="field">
                        <h3>Phone Number</h3>
                        <p>+123 456 7890</p>
                    </div>
                </div>
                <div class="column">
                    <div class="field">
                        <h3>Date of Birth</h3>
                        <p>January 1, 1990</p>
                    </div>
                    <div class="field full-width">
                        <h3>Address</h3>
                        <p>123 Green Street, EcoCity, Earth</p>
                    </div>
                </div>
            </div>
            <button class="edit-btn">Edit Profile</button>
        </main>
    </div>

    <script>
        function updateDateTime() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById("datetime").textContent = now.toLocaleDateString("en-US", options);
        }
        updateDateTime();

        document.getElementById("fileInput").addEventListener("change", function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById("profileImage").src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>