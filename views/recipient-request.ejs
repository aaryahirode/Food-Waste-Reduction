<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accepted Requests | MealMatch</title>
    <link rel="stylesheet" href="styles/request.css">
</head>
<body>
    <nav>
        <div class="nav-content">
            <div class="logo">MealMatch</div>
            <div class="profile-menu">
                <%if(locals.id){%>
                    <div class="profile-icon"><a href="/donor-profile?id=<%= id %>">ðŸ‘¤</a></div>
                <%}else{%>
                    <div class="profile-icon"><a href="/donor-profile">ðŸ‘¤</a></div>
                <%}%>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="sidebar">
            <ul>
                <%if(locals.id){%>
                    <li><a href="/recipient?id=<%=id  %>">Home</a></li>
                    <li><a href="/recipient-request?id=<%=id  %>">Accepted Requests</a></li>
                <%}else{%>
                    <li><a href="/recipient">Home</a></li>
                    <li><a href="/recipient-request">Accepted Requests</a></li>
                <%}%>
             
            </ul>
        </div>
        <div class="requests-container">
            <div id="pending" class="donation-list">
                <% if (datas.length>0 && locals.id) { %>
                    <% datas.forEach((data) => { %>
                            <div class="donation-box">
                                <% if (data.food_image) { %>
                                    <img class="donation-img" src="data:image/jpeg;base64,<%= data.food_image.toString('base64') %>" height="200px" alt="<%= data.food_name %>">
                                <% } else { %>
                                    <p>No Image Available</p>
                                <% } %>
                                <div class="donation-details">
                                    <h3><%= data.food_name %></h3>
                                    
                                    <p>Location: <%= data.donor_location %></p>
                                </div>
                                <div class="status-dot pending"></div>
                            </div>
                        
                    <% }) %>
                <% } %>
            </div>
        </div>
        
    </div>
    <script>
        // Additional interactivity if needed
    </script>
</body>
</html>
